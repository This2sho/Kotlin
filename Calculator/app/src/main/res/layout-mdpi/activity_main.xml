<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:textColor="@color/white"
        android:textSize="40sp"
        tools:text="0" />

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonClean"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_ButtonClean"
                android:text="AC"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPlusMins"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_buttonNumberEvent"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPercent"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_buttonPercent"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="wrap_content"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/darkorange"
                android:onClick="onClick_buttonOpEevent"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_buttonNumberEvent"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_buttonNumberEvent"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_buttonNumberEvent"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="wrap_content"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/darkorange"
                android:onClick="onClick_buttonOpEevent"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_buttonNumberEvent"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_buttonNumberEvent"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="30pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_buttonNumberEvent"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonSubtraction"
                android:layout_width="wrap_content"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/darkorange"
                android:onClick="onClick_buttonOpEevent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_buttonNumberEvent"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_buttonNumberEvent"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="30pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="onClick_buttonNumberEvent"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonSum"
                android:layout_width="wrap_content"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/darkorange"
                android:onClick="onClick_buttonOpEevent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="159pt"
            android:layout_height="60pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"

            android:onClick="onClick_buttonNumberEvent"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="60pt"
            android:layout_height="60pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteback"

            android:onClick="onClick_buttonNumberEvent"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="wrap_content"
            android:layout_height="60pt"
            android:layout_weight="1"
            android:background="@color/darkorange"

            android:onClick="onClick_buttonEqualEvent"
            android:text="="
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>